{
	"manifest_version": 3,
	"version": "1.0",
	"name": "Alexandria",
	"author": "Charlie Martinez Dominguez",
	"action": {
		"default_popup": "index.html",
		"default_title": "Alexandria"
	},
	"permissions": ["tabs", "webRequest", "downloads", "activeTab", "scripting"],
	"host_permissions": ["<all_urls>"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"background": {
		"service_worker": "background.js"
	}
}
